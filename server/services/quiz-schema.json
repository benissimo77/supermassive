{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Quiz",
	"description": "Schema for SuperMassive quiz format",
	"type": "object",
	"required": [
		"title",
		"rounds"
	],
	"properties": {
		"title": {
			"type": "string",
			"description": "The title of the quiz"
		},
		"description": {
			"type": "string",
			"description": "A description of the quiz"
		},
		"rounds": {
			"type": "array",
			"description": "The rounds in the quiz",
			"minItems": 0,
			"items": {
				"$ref": "#/definitions/round"
			}
		}
	},
	"definitions": {
		"round": {
			"type": "object",
			"required": [
				"title",
				"questions",
				"roundTimer",
				"showAnswer",
				"updateScores"
			],
			"properties": {
				"title": {
					"type": "string",
					"description": "The title of the round"
				},
				"description": {
					"type": "string",
					"description": "A description of the round"
				},
				"roundTimer": {
					"type": "string",
					"enum": [
						"0", "10", "20", "30", "60"
					],
					"description": "Timer for the entire round (selection from fixed values representing the allowed time in seconds, a value of 0 means no timer)"
				},
				"showAnswer": {
					"type": "string",
					"enum": [
						"question",
						"round"
					],
					"description": "When to show answers - after each question or at the end of the round"
				},
				"updateScores": {
					"type": "string",
					"enum": [
						"question",
						"round"
					],
					"description": "When to update scores - after each question or at the end of the round"
				},
				"questions": {
					"type": "array",
					"description": "The questions in the round",
					"minItems": 0,
					"items": {
						"$ref": "#/definitions/question"
					}
				}
			}
		},
		"question": {
			"type": "object",
			"required": [
				"type",
				"text"
			],
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"multiple-choice",
						"true-false",
						"text",
						"hotspot",
						"point-it-out",
						"number-exact",
						"number-closest",
						"number-average",
						"ordering",
						"matching",
						"draw"
					],
					"description": "The type of question. 'hotspot': Player must click as close as possible to a specific point (x, y) in the image. Closest to the point scores higherst. 'point-it-out': answer is a rectangle defined by two opposite corners, 'start' and 'end' - if player selects a point within the rectangle they are correct. 'number-exact': player must provide exact numeric answer. 'number-closest': player must provide numeric answer, closest to the correct answer scores highest. 'number-average': players provide numeric answers, and the average of all answers is computed; players closest to the average score highest."
				},
				"text": {
					"type": "string",
					"description": "The question text"
				},
				"image": {
					"type": [
						"string",
						"null"
					],
					"description": "Optional URL to image file to allow questions to include images. Only use images that are publicly viewable and CORS-allowed in browsers. Use file format PNG or JPG"
				},
				"audio": {
					"type": [
						"string",
						"null"
					],
					"description": "Optional URL for audio file to allow questions to include audio. Only include URLs from YouTube available to play in the YouTube IFrame Player API"
				}
			},
			"allOf": [
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"multiple-choice"
								]
							}
						}
					},
					"then": {
						"required": [
							"options"
						],
						"properties": {
							"options": {
								"type": "array",
								"minItems": 2,
								"description": "The first item in the array is the correct answer. The quiz engine will shuffle options when displaying.",
								"items": {
									"type": "string"
								}
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"true-false", "text" 
								]
							}
						}
					},
					"then": {
						"required": [
							"answer"
						],
						"properties": {
							"answer": {
								"type": "string",
								"minLength": 1,
								"description": "The correct answer"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"text"
								]
							}
						}
					},
					"then": {
						"required": [
							"answer"
						],
						"properties": {
							"answer": {
								"type": "string",
								"description": "The correct answer text"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"number-exact",
									"number-closest"
								]
							}
						}
					},
					"then": {
						"required": [
							"answer"
						],
						"properties": {
							"answer": {
								"type": "number",
								"description": "The correct answer (numeric)"
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"hotspot"
								]
							}
						}
					},
					"then": {
						"required": [
							"answer"
						],
						"properties": {
							"answer": {
								"type": "object",
								"required": [
									"x",
									"y"
								],
								"properties": {
									"x": {
										"type": "integer"
									},
									"y": {
										"type": "integer"
									}
								}
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"point-it-out"
								]
							}
						}
					},
					"then": {
						"required": [
							"answer"
						],
						"properties": {
							"answer": {
								"type": "object",
								"description": "Defines a rectangular target area on the image. The user places an X on the image, and the answer is correct if the X lies anywhere inside the rectangle (inclusive). The rectangle is defined by two opposite corners: `start` and `end`. These coordinates do not need to be in any specific order; the quiz engine will compute the min/max to form the rectangle. Coordinates use a normalized range of 0â€“1000 on both axes.",
								"required": [
									"start",
									"end"
								],
								"properties": {
									"start": {
										"type": "object",
										"description": "First corner of the rectangle (any corner).",
										"required": [
											"x",
											"y"
										],
										"properties": {
											"x": {
												"type": "integer"
											},
											"y": {
												"type": "integer"
											}
										}
									},
									"end": {
										"type": "object",
										"description": "Opposite corner of the rectangle.",
										"required": [
											"x",
											"y"
										],
										"properties": {
											"x": {
												"type": "integer"
											},
											"y": {
												"type": "integer"
											}
										}
									}
								}
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"hotspot",
									"point-it-out"
								]
							}
						}
					},
					"then": {
						"required": [
							"image"
						],
						"properties": {
							"image": {
								"type": "string",
								"minLength": 1
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"ordering"
								]
							}
						}
					},
					"then": {
						"required": [
							"items",
							"extra"
						],
						"properties": {
							"items": {
								"type": "array",
								"minItems": 2,
								"items": {
									"type": "string"
								}
							},
							"extra": {
								"type": "object",
								"required": [
									"startLabel",
									"endLabel"
								],
								"properties": {
									"startLabel": {
										"type": "string",
										"minLength": 1,
										"description": "Label for the start of the ordering"
									},
									"endLabel": {
										"type": "string",
										"minLength": 1,
										"description": "Label for the end of the ordering"
									}
								}
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"matching"
								]
							}
						}
					},
					"then": {
						"required": [
							"pairs"
						],
						"properties": {
							"pairs": {
								"type": "array",
								"minItems": 2,
								"items": {
									"type": "object",
									"required": [
										"left",
										"right"
									],
									"properties": {
										"left": {
											"type": "string"
										},
										"right": {
											"type": "string"
										}
									}
								}
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"enum": [
									"draw"
								]
							}
						}
					},
					"then": {
						"required": [
							"answer"
						],
						"properties": {
							"answer": {
								"type": "string",
								"description": "The expected drawing description"
							}
						}
					}
				}
			]
		}
	}
}