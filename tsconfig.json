{
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "noEmitOnError": false,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
     "exclude": ["node_modules", "dist", "build", "coverage", "test", "tests", "**/*.spec.ts"]
}